<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="anchorPane" prefHeight="620.0" prefWidth="760.0" style="-fx-background-color: #2A2C2B;"
            stylesheets="/css/gamePageStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.gamecontrollers.GamePageFourController">
    <ImageView fx:id="bombImage" fitHeight="136.0" fitWidth="144.0" layoutX="310.0" layoutY="14.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="/pictures/bomb.png"/>
    </ImageView>
    <Label fx:id="questionLabel" layoutX="129.0" layoutY="170.0" prefHeight="95.0" prefWidth="503.0"
           style="-fx-background-color: #2A2C2B;" styleClass="question" text="label" textAlignment="CENTER"
           textFill="#e74c3c" wrapText="true">
    </Label>
    <Label fx:id="greenLabel" layoutX="36.0" layoutY="274.0" prefHeight="72.0" prefWidth="187.0"
           style="-fx-background-color: #2A2C2B;" text="Label" textAlignment="CENTER" textFill="#e74c3c"
           wrapText="true">
        <graphic>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="GREEN" height="72.0" stroke="BLACK" strokeType="INSIDE"
                       width="22.0"/>
        </graphic>
    </Label>
    <Label fx:id="purpleLabel" layoutX="269.0" layoutY="271.0" prefHeight="72.0" prefWidth="187.0"
           style="-fx-background-color: #2A2C2B;" text="Label" textAlignment="CENTER" textFill="#e74c3c"
           wrapText="true">
        <graphic>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="PURPLE" height="72.0" stroke="BLACK" strokeType="INSIDE"
                       width="22.0"/>
        </graphic>
    </Label>
    <Label fx:id="redLabel" layoutX="484.0" layoutY="271.0" prefHeight="72.0" prefWidth="187.0"
           style="-fx-background-color: #2A2C2B;" text="Label" textAlignment="CENTER" textFill="#e74c3c"
           wrapText="true">
        <graphic>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="RED" height="72.0" stroke="BLACK" strokeType="INSIDE"
                       width="22.0"/>
        </graphic>
    </Label>
    <Label fx:id="orangeLabel" layoutX="130.0" layoutY="381.0" prefHeight="72.0" prefWidth="187.0"
           style="-fx-background-color: #2A2C2B;" text="Label" textAlignment="CENTER" textFill="#e74c3c"
           wrapText="true">
        <graphic>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="ORANGE" height="72.0" stroke="BLACK" strokeType="INSIDE"
                       width="22.0"/>
        </graphic>
    </Label>
    <Label fx:id="skyBlueLabel" layoutX="374.0" layoutY="381.0" prefHeight="72.0" prefWidth="187.0"
           style="-fx-background-color: #2A2C2B;" text="Label" textAlignment="CENTER" textFill="#e74c3c"
           wrapText="true">
        <graphic>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#00f9ff" height="72.0" stroke="BLACK" strokeType="INSIDE"
                       width="22.0"/>
        </graphic>
    </Label>
    <Line fx:id="orangeLine" endX="500.0" fill="RED" layoutX="230.0" layoutY="470.0"
          onMouseClicked="#onClickedOrangeLine" startX="-200.0" stroke="ORANGE" styleClass="customLine">

    </Line>
    <Line fx:id="redLine" endX="500.0" fill="RED" layoutX="230.0" layoutY="490.0" onMouseClicked="#onClickedRedLine"
          startX="-200.0" stroke="RED" styleClass="customLine">
    </Line>
    <Line fx:id="greenLine" endX="500.0" fill="RED" layoutX="230.0" layoutY="510.0" onMouseClicked="#onClickedGreenLine"
          startX="-200.0" stroke="GREEN" styleClass="customLine">
    </Line>
    <Line fx:id="purpleLine" endX="500.0" fill="RED" layoutX="230.0" layoutY="530.0"
          onMouseClicked="#onClickedPurpleLine" startX="-200.0" stroke="PURPLE" styleClass="customLine">

    </Line>
    <Line fx:id="skyBlueLine" endX="500.0" fill="RED" layoutX="231.0" layoutY="550.0"
          onMouseClicked="#onClickedSkyBlueLine" startX="-200.0" stroke="#00f9ff" styleClass="customLine">

    </Line>

    <HBox layoutX="23.0" layoutY="30.0" prefHeight="99.0" prefWidth="105.0" style="-fx-background-color: #2A2C2B;">
        <children>
            <Label fx:id="timeLabel" alignment="CENTER" prefHeight="111.0" prefWidth="120.0" styleClass="timer"
                   text="60" textFill="#e74c3c">

            </Label>
        </children>
    </HBox>
</AnchorPane>
