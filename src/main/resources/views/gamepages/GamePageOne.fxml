<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="anchorPane" prefHeight="620.0" prefWidth="760.0" style="-fx-background-color: #2A2C2B;"
            stylesheets="/css/gamePageStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.gamecontrollers.GamePageOneController">
    <Line fx:id="redLine" endX="500.0" fill="RED" layoutX="228.0" layoutY="510.0" onMouseClicked="#onClickedRedLine"
          startX="-200.0" stroke="RED" strokeWidth="8.0" styleClass="customLine">
        <cursor>
        <Cursor fx:constant="HAND"/>
        </cursor>
    </Line>
    <Label id="question" fx:id="questionLabel" alignment="TOP_LEFT" layoutX="129.0" layoutY="215.0" prefHeight="87.0"
           prefWidth="503.0" style="-fx-background-color: #2A2C2B;" styleClass="question" text="label"
           textAlignment="CENTER" textFill="#e74c3c" wrapText="true">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>
    <Label fx:id="redLabel" alignment="TOP_LEFT" layoutX="123.0" layoutY="392.0" prefHeight="66.0" prefWidth="167.0"
           style="-fx-background-color: #2A2C2B;" text="Label" textAlignment="CENTER" textFill="#e74c3c"
           wrapText="true">
        <font>
            <Font size="16.0"/>
        </font>
        <graphic>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="RED" height="66.0" stroke="BLACK" strokeType="INSIDE"
                   width="27.0"/>
        </graphic>
    </Label>
    <Label fx:id="blueLabel" alignment="TOP_LEFT" layoutX="502.0" layoutY="392.0" prefHeight="66.0" prefWidth="167.0"
           style="-fx-background-color: #2A2C2B;" text="Label" textAlignment="CENTER" textFill="#e74c3c"
           wrapText="true">
        <font>
            <Font size="16.0"/>
        </font>
        <graphic>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="BLUE" height="66.0" stroke="BLACK" strokeType="INSIDE"
                   width="27.0"/>
        </graphic>
    </Label>
    <Line fx:id="blueLine" endX="500.0" fill="RED" layoutX="228.0" layoutY="530.0" onMouseClicked="#onClickedBlueLine"
          startX="-200.0" stroke="BLUE" strokeWidth="8.0" styleClass="customLine">
    </Line>
    <ImageView fx:id="bombImage" fitHeight="179.0" fitWidth="173.0" layoutX="317.0" layoutY="14.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="/pictures/bomb.png"/>
    </ImageView>
    <HBox layoutX="14.0" layoutY="14.0" prefHeight="99.0" prefWidth="105.0">
        <Label id="timer" fx:id="timeLabel" alignment="CENTER" prefHeight="111.0" prefWidth="120.0"
               styleClass="timer" text="60" textFill="#ff2929">
        </Label>
    </HBox>
</AnchorPane>
